<div class="card">
  <img class="card-img-top" src="<%= city.image %>" width="100%">
  <div class="card-block">
    <h3 class="card-title" data-location="<%= JSON.stringify({ lat: city.lat, lng: city.lng }) %>"><%= city.name %></h3>
    <h4 class="card-title"><%= city.country %></h4>
  </div>
</div>
<div class="row">
  <div class="col">
    <h3>Upcoming Events</h3>
    <input type="range" min=1 max=35 value="10"> <span class="badge badge-primary"><span class="distance">10</span> miles</span>
    <hr/>
  </div>
</div>
<div class="events row"></div>
